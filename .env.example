# Django Secret Key
# Generate a new secret key for production: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=onespirit_db
DB_USER=onespirit_user
DB_PASSWORD=onespirit_password
# Note: DB_HOST is overridden to 'postgres' in docker-compose.yaml for containerized setup
# Use 'localhost' for local development outside Docker
DB_HOST=localhost
DB_PORT=5432

# pgAdmin Configuration (optional - only needed if using pgAdmin)
PGADMIN_EMAIL=admin@onespirit.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Django Development Server Port
DJANGO_PORT=8080

# Production Settings (only needed for production deployment)
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# REDIS_URL=redis://127.0.0.1:6379/1
